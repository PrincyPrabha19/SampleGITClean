<Page x:Name="page"
    x:Class="Client.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Client"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="btnInit" Click="inititalize" HorizontalAlignment="Stretch" Margin="0,10" Width="200">Initialize</Button>
            <StackPanel Orientation="Horizontal" Width="200">
                <TextBox x:Name="tbxInterval" TextWrapping="Wrap" BorderThickness="1" Width="37" Text="{Binding Interval, ElementName=page, Mode=TwoWay}" Margin="0,0,6,0"/>
                <Button x:Name="btnColor" Click="setColor" IsEnabled="False" Content="Start Polling" Width="130" />
            </StackPanel>
            <Button x:Name="btnRelease" Click="release" HorizontalAlignment="Stretch" Margin="0,10" Width="200" IsEnabled="False">Abort Polling</Button>
        </StackPanel>
        <Border VerticalAlignment="Bottom" Height="25" BorderBrush="Black" BorderThickness="0,1,0,0">
            <TextBlock x:Name="textBlockStatus" TextWrapping="Wrap" Text=""/>
        </Border>
    </Grid>
</Page>
